{
  "name": "@canonical/juju-react-components",
  "version": "0.2.0",
  "description": "React components for use with Juju",
  "main": "lib/index.js",
  "source": true,
  "scripts": {
    "build": "npm run clean && npm i && npm run check && NODE_ENV=production babel src --out-dir lib --copy-files --ignore src/**/test-*.js,src/**/*.stories.js,src/test",
    "check": "npm run lint && npm run test",
    "clean": "rm -rf lib node_modules",
    "lint": "eslint .",
    "prepublishOnly": "npm run build",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/juju/react-components.git"
  },
  "keywords": [
    "juju",
    "react"
  ],
  "author": "Huw Wilkins <huw.wilkins@canonical.com>",
  "license": "LGPL-3.0",
  "bugs": {
    "url": "https://github.com/juju/react-components/issues"
  },
  "homepage": "https://github.com/juju/react-components#readme",
  "devDependencies": {
    "@storybook/react": "^3.4.11",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.6.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "chai": "^4.2.0",
    "css-loader": "^1.0.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^5.7.0",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.1.4",
    "jest": "^23.6.0",
    "jest-prop-type-error": "^1.1.0",
    "mutation-observer": "^1.0.3",
    "node-sass": "^4.9.4",
    "prettier": "1.15.2",
    "pretty-quick": "^1.8.0",
    "prop-types": "^15.6.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "sass-loader": "^7.1.0",
    "shapeup": "^0.2.5",
    "sinon": "^7.0.0",
    "storybook-addon-jsx": "^5.4.0",
    "style-loader": "^0.23.1"
  },
  "dependencies": {
    "@canonical/maraca": "^0.1.2",
    "classnames": "^2.2.6",
    "hoist-non-react-statics": "^3.0.1",
    "jaaslib": "^0.5.0",
    "vanilla-framework": "^1.8.0",
    "xterm": "^3.8.1",
    "xterm-webfont": "^1.1.1"
  },
  "peerDependencies": {
    "react": "^16.5.2",
    "react-dom": "^16.5.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
